<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |hon| %>
            <tr>
                <td><%= hon.title %></td>
                <td><%= hon.body %></td>
                <td><%= link_to "Show", "/books/#{hon.id}", class:"btn" %></td>
                <td><%= link_to "Edit", edit_book_path(hon), class:"btn" %></td>
                <td><%= link_to "Destroy", book_path(hon), class:"btn",  method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>



<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="alert">
    <ul>
        <li>error</li>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%=form_with model: @book, local:true do |f| %>
    <div class="field">
        <label for="book-title">Title</label>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <label for="book-body">Body</label>
        <%= f.text_area :body %>
    </div>
    <div class="actions">
        <%= f.submit "Create Book" %>
    </div>
<% end %>