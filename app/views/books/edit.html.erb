<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="alert">
    <ul>
        <li>error</li>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <%= form_with model:@book, local:true do |f| %>
    <div class="field">
      <label for ="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class= "field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions"></div>
      <%= f.submit "Update Book" %>
  <% end %>

<%= link_to "Show", "/books/#{@book.id}", class:"btn" %>
|
<%=link_to "Back", books_path, class:"btn" %>